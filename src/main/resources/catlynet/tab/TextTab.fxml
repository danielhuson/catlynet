<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<TabPane fx:id="tabPane" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="catlynet.tab.TextTabController">
    <tabs>
        <Tab fx:id="tab" closable="false" disable="false" text="Tab">
            <content>
                <BorderPane>
                    <center>
                        <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="200.0"
                                  wrapText="true"/>
                    </center>
                    <top>
                        <VBox fx:id="vbox" minHeight="4.0" BorderPane.alignment="CENTER">
                            <children>
                                <ToolBar prefHeight="40.0" prefWidth="200.0">
                                    <items>
                                        <ToggleButton fx:id="wrapButton" layoutX="10.0" layoutY="12.0"
                                                      mnemonicParsing="false" text="Wrap"/>
                                        <ToggleButton fx:id="findToggleButton" mnemonicParsing="false" text="FInd..."/>
                                        <MenuButton fx:id="exportMenuButton" mnemonicParsing="false" text="Export">
                                            <items>
                                                <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="Copy"/>
                                                <MenuItem fx:id="exportMenuItem" mnemonicParsing="false"
                                                          text="Export..."/>
                                            </items>
                                        </MenuButton>
                                    </items>
                                </ToolBar>
                            </children>
                        </VBox>
                    </top>
                </BorderPane>
            </content>
        </Tab>

    </tabs>
</TabPane>
