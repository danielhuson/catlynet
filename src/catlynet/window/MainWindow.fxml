<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="catlynet.window.MainWindowController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="newMenuItem" mnemonicParsing="false" text="New...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="N" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="O" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <Menu fx:id="recentFilesMenu" mnemonicParsing="false" text="Recent"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="saveMenItem" mnemonicParsing="false" text="Save...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="S" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="pageSetupMenuItem" mnemonicParsing="false" text="Page Setup..."/>
                                <MenuItem fx:id="printMenuItem" mnemonicParsing="false" text="Print...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="P" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="W" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="quitMenuItem" mnemonicParsing="false" text="Quit">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Q" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Z" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="cutMenuItem" mnemonicParsing="false" text="Cut">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="X" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="Copy">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="C" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="pasteMenuItem" mnemonicParsing="false" text="Paste">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="V" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="clearMenuItem" mnemonicParsing="false" text="Clear">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="BACK_SPACE" control="UP" meta="DOWN"
                                                            shift="UP" shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="findMenuItem" mnemonicParsing="false" text="Find...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="F" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="findAgainMenuItem" mnemonicParsing="false" text="Find Again">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="G" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Select">
                            <items>
                                <MenuItem fx:id="selectAllMenuItem" mnemonicParsing="false" text="All">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="A" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <MenuItem fx:id="selectNoneMenuItem" mnemonicParsing="false" text="None">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="A" control="UP" meta="DOWN" shift="DOWN"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="selectInvertedMenuItem" mnemonicParsing="false" text="Invert">
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="selectNodesMenuItem" mnemonicParsing="false" text="Nodes">
                                </MenuItem>
                                <MenuItem fx:id="selectEdgesMenuItem" mnemonicParsing="false" text="Edges">
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="selectMaxCAFMenuItem" mnemonicParsing="false" text="Max CAF">
                                </MenuItem>
                                <MenuItem fx:id="selectMaxRAFMenuItem" mnemonicParsing="false" text="Max RAF">
                                </MenuItem>
                                <MenuItem fx:id="selectMaxPseudoRAFMenuItem" mnemonicParsing="false"
                                          text="Max Pseudo RAF">
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="selectFoodMenuItem" mnemonicParsing="false" text="Food">
                                </MenuItem>
                                <MenuItem fx:id="selectMoleculesMenuItem" mnemonicParsing="false" text="Molecules">
                                </MenuItem>
                                <MenuItem fx:id="selectReactionsMenuItem" mnemonicParsing="false" text="Reactions">
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="View">
                            <items>
                                <CheckMenuItem fx:id="wrapTextMenuItem" mnemonicParsing="false" text="Wrap Text"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="formatMenuItem" mnemonicParsing="false" text="Format...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="J" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu fx:id="algorithmMenu" mnemonicParsing="false" text="Methods">
                            <items>
                                <MenuItem fx:id="parseInputMenuItem" mnemonicParsing="false" text="Parse Input">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="I" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="runRAFMenuItem" mnemonicParsing="false" text="Run Max RAF Algorithm"/>
                                <MenuItem fx:id="runCAFMenuItem" mnemonicParsing="false" text="Run Max CAF Algorithm"/>
                                <MenuItem fx:id="runPseudoRAFMenuItem" mnemonicParsing="false"
                                          text="Run Max Pseudo RAF Algorithm"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="runMenuItem" mnemonicParsing="false" text="Run All">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="R" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <CheckMenuItem fx:id="animateCAFCheckMenuItem" mnemonicParsing="false"
                                               text="Animate CAF">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="C" control="UP" meta="DOWN" shift="DOWN"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </CheckMenuItem>
                                <CheckMenuItem fx:id="animateRAFCheckMenuItem" mnemonicParsing="false"
                                               text="Animate RAF">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="R" control="UP" meta="DOWN" shift="DOWN"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </CheckMenuItem>
                                <CheckMenuItem fx:id="animateMaxRAFCheckMenuItem" mnemonicParsing="false"
                                               text="Animate Pseudo RAF">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="P" control="UP" meta="DOWN" shift="DOWN"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </CheckMenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="stopAnimationMenuItem" mnemonicParsing="false" text="Stop Simulation">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="SPACE" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu fx:id="windowMenu" mnemonicParsing="false" text="Window">
                            <items>
                                <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About...">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="H" control="UP" meta="DOWN" shift="UP"
                                                            shortcut="UP"/>
                                    </accelerator>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem fx:id="checkForUpdatesMenuItem" mnemonicParsing="false"
                                          text="Check for Updates..."/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar fx:id="mainToolBar" minHeight="-Infinity" prefHeight="30.0">
                    <items>
                        <Button fx:id="runButton" minHeight="-Infinity" mnemonicParsing="false" prefHeight="24.0"
                                text="Run"/>
                        <Separator orientation="VERTICAL" prefHeight="200.0"/>
                        <Button fx:id="stopAnimationButton" minHeight="-Infinity" mnemonicParsing="false"
                                prefHeight="24.0" text="Animation">
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="/catlynet/resources/icons/Close16.gif"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <FlowPane fx:id="statusFlowPane" prefHeight="30.0" style="-fx-border-color: lightgray;"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0"/>
                <Label fx:id="memoryUsageLabel" text="Memory" AnchorPane.bottomAnchor="3.0"
                       AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="3.0"/>
            </children>
        </AnchorPane>
    </bottom>
    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER">
            <items>
                <BorderPane>
                    <center>
                        <VBox BorderPane.alignment="CENTER">
                            <children>
                                <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="26.0"
                                       text="Input food set:">
                                    <VBox.margin>
                                        <Insets left="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <ComboBox fx:id="foodSetComboBox" editable="true" maxHeight="-Infinity"
                                          maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="26.0"
                                          promptText="Food set"/>
                                <VBox fx:id="reactionsInputVBox">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                    <children>
                                        <ToolBar maxHeight="-Infinity" minHeight="-Infinity" prefHeight="26.0">
                                            <items>
                                                <Label text="Input catalyic reactions:"/>
                                            </items>
                                        </ToolBar>
                                    </children>
                                </VBox>
                                <TextArea fx:id="inputTextArea" promptText="Input reactions" VBox.vgrow="ALWAYS"/>
                            </children>
                        </VBox>
                    </center>
                </BorderPane>
                <StackPane fx:id="outputPane">
                    <children>
                        <TabPane fx:id="outputTabPane">
                            <tabs>
                                <Tab fx:id="visualizationTab" closable="false" disable="true" text="Visualization">
                                    <content>
                                        <BorderPane fx:id="visualizationBorderPane">
                                            <top>
                                                <VBox fx:id="visualizationVBox" minHeight="4.0"
                                                      BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                    <contextMenu>
                                        <ContextMenu fx:id="visualizationContextMenu">
                                            <items>
                                                <MenuItem fx:id="selectCAFContextMenuItem" mnemonicParsing="false"
                                                          text="Select Max CAF"/>
                                                <MenuItem fx:id="selectRAFContextMenuItem" mnemonicParsing="false"
                                                          text="Select Max RAF"/>
                                                <MenuItem fx:id="selectPseudoRAFContextMenuItem" mnemonicParsing="false"
                                                          text="Select Max Pseudo-RAF"/>
                                                <SeparatorMenuItem mnemonicParsing="false"/>
                                                <MenuItem fx:id="selectNoneContextMenuItem" mnemonicParsing="false"
                                                          text="Select None"/>
                                                <SeparatorMenuItem mnemonicParsing="false"/>
                                                <CheckMenuItem fx:id="animateCAFContextMenuItem" mnemonicParsing="false"
                                                               text="Animate CAF"/>
                                                <CheckMenuItem fx:id="animateRAFContextMenuItem" mnemonicParsing="false"
                                                               text="Animate RAF"/>
                                                <CheckMenuItem fx:id="aminatePseudoRAFContextMenuItem"
                                                               mnemonicParsing="false" text="Animate Pseudo-RAF"/>
                                                <SeparatorMenuItem mnemonicParsing="false"/>
                                                <MenuItem fx:id="stopAnimationContextMenuItem" mnemonicParsing="false"
                                                          text="Stop Simulation"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </Tab>
                                <Tab fx:id="parsedInputTab" closable="false" disable="true" text="Parsed Input">
                                    <content>
                                        <BorderPane>
                                            <center>
                                                <TextArea fx:id="reactionsTextArea" editable="false" prefHeight="200.0"
                                                          prefWidth="200.0" promptText="Parsed input" wrapText="true"/>
                                            </center>
                                            <top>
                                                <VBox fx:id="reactionsVBox" minHeight="4.0"
                                                      BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="cafTab" closable="false" disable="true" text="Max CAF">
                                    <content>
                                        <BorderPane>
                                            <center>
                                                <TextArea fx:id="cafTextArea" editable="false" prefHeight="200.0"
                                                          prefWidth="200.0" wrapText="true"/>
                                            </center>
                                            <top>
                                                <VBox fx:id="cafVBox" minHeight="4.0" BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                    <tooltip>
                                        <Tooltip
                                                text="Constructively autocatalytic F-generated reaction network (CAF)"/>
                                    </tooltip>
                                </Tab>
                                <Tab fx:id="rafTab" closable="false" disable="true" text="Max RAF">
                                    <content>
                                        <BorderPane>
                                            <center>
                                                <TextArea fx:id="rafTextArea" editable="false" prefHeight="200.0"
                                                          prefWidth="200.0" wrapText="true"/>
                                            </center>
                                            <top>
                                                <VBox fx:id="rafVBox" minHeight="4.0" BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                    <tooltip>
                                        <Tooltip text="Reflexively autocatalytic F-generated reaction network (RAF)"/>
                                    </tooltip>
                                </Tab>
                                <Tab fx:id="pseudoRafTab" closable="false" disable="true" text="Max Pseudo RAF">
                                    <content>
                                        <BorderPane>
                                            <center>
                                                <TextArea fx:id="pseudoRAFTextArea" editable="false" prefHeight="200.0"
                                                          prefWidth="200.0" wrapText="true"/>
                                            </center>
                                            <top>
                                                <VBox fx:id="pseudoRafVBox" minHeight="4.0"
                                                      BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                    <tooltip>
                                        <Tooltip text="Pseudo RAF"/>
                                    </tooltip>
                                </Tab>
                                <Tab fx:id="logTab" closable="false" text="Log">
                                    <content>
                                        <BorderPane>
                                            <center>
                                                <TextArea fx:id="logTextArea" editable="false" prefHeight="200.0"
                                                          prefWidth="200.0" promptText="Log" wrapText="true">
                                                    <contextMenu>
                                                        <ContextMenu>
                                                            <items>
                                                                <MenuItem fx:id="clearLogMenuItem"
                                                                          mnemonicParsing="false" text="Clear"/>
                                                            </items>
                                                        </ContextMenu>
                                                    </contextMenu>
                                                </TextArea>
                                            </center>
                                            <top>
                                                <VBox fx:id="logVBox" minHeight="4.0" BorderPane.alignment="CENTER"/>
                                            </top>
                                        </BorderPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </StackPane>
            </items>
            <BorderPane.margin>
                <Insets left="2.0" right="2.0"/>
            </BorderPane.margin>
        </SplitPane>
    </center>
</BorderPane>
